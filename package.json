{
  "name": "@bjnstnkvc/local-storage",
  "version": "1.1.4",
  "description": "Simple wrapper for JavaScript Local Storage API.",
  "type": "module",
  "main": "lib/main.umd.js",
  "module": "lib/main.esm.js",
  "source": "src/main.ts",
  "exports": {
    ".": {
      "import": "./lib/main.esm.js",
      "require": "./lib/main.umd.js",
      "default": "./lib/main.umd.js"
    }
  },
  "files": [
    "lib/**/*",
    "src/**/*.d.ts"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "jest --config jestconfig.json ./tests",
    "build": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BJNSTNKVC/js-local-storage.git"
  },
  "keywords": [
    "storage"
  ],
  "author": "Bojan Stankovic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BJNSTNKVC/js-local-storage/issues"
  },
  "homepage": "https://github.com/BJNSTNKVC/js-local-storage#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.44.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
